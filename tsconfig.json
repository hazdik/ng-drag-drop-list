{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "stripInternal": true,

    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "dist/",
    "lib": ["dom", "es5", "es2015"]
  },
  "include": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}